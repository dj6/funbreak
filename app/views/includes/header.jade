	#signupModal.modal.fade
		.modal-dialog
			.modal-content
				form( id="signup" method="POST", action="/user/signup")
					.modal-header
						p 注册
						p#errorSignup
					.modal-body
						.form-group
							label(for="signupEmail") 邮箱
							input#signupEmail.form-control(name="email")
						.form-group
							label(for="signupName") 昵称
							input#signupName.form-control(name="name", type="text")
						.form-group
							label(for="signupPassword") 密码
							input#signupPassword.form-control(name="password", type="password")
						.form-group
							label(for="rePassword") 重复密码
							input#rePassword.form-control(name="repassword" type="password")
					.modal-footer
						button.btn.btn-default(type="button", data-dismiss="modal") 关闭
						button#signupButton.btn.btn-success(type="submit") 提交

	#signinModal.modal.fade
		.modal-dialog
			.modal-content
				form(method="POST", action="/user/signin" id="signin")
					.modal-header
						p 登录
						p#errorSignin
					.modal-body
						.form-group
							label(for="signinEmail") 邮箱
							input#signinEmail.form-control(name="email")
						.form-group
							label(for="signinPassword") 密码
							input#signinPassword.form-control(name="password", type="password")
					.modal-footer
						button.btn.btn-default(type="button", data-dismiss="modal") 关闭
						button#loginButton.btn.btn-success(type="submit") 提交
script(src="/js/validate.js")						
