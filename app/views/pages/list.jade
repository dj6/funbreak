extends ../layout

block content
	.container
		.row
			table.table.table-hover.tabel-bordered
				thead
					tr
						th 名称
						th 类型						
						th 图片地址
						th 视频地址
						th 简介
						th 录入时间
						th 查看
						th 更新
						th 删除
				tbody
				each item in movies
					tr(class="item-id-#{item._id}")
						td #{item.title}
						td #{item.type}
						td #{item.poster}
						td #{item.flash}
						td #{item.summary}
						td #{item.year}
						td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
						td
							a(target="_blank",href="/movie/#{item._id}") 查看
						td
							a(target="_blank",href="/admin/movie/update/#{item._id}") 修改
						td
							button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除	
	script(src="/js/admin.js")